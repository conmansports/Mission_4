@{
    ViewData["Title"] = "Form Mission 5";
}

@model FormModel;

<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments:</label>
    <input type="number" id="assig" asp-for="Assig"/><br />
    <label>Group Project:</label>
    <input type="number" id="group" asp-for="Group"/><br />
    <label>Quizzes:</label>
    <input type="number" id="quiz" asp-for="Quiz"/><br />
    <label>Midterm Exam:</label>
    <input type="number" id="mid" asp-for="Mid"/><br />
    <label>Final Exam:</label>
    <input type="number" id="final" asp-for="Final"/><br />
    <label>INTEX:</label>
    <input type="number" id="intex" asp-for="Intex"/><br />
    <input id="submitbtn" type="submit" value="Submit Grades" />

    <div asp-validation-summary="All"></div>
</form>

<span id="gradecalc"></span>

<script src="NewFolder2/JavaScript.js"></script>